<form action="<%= 'update' === formAction ? `/update/${company.id}` : '/add' %>" method="post">
    <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">

    <div class="formHeader">
        <button type="button">-</button>
        <input type="text" name="companyName" value="<%- company.companyName %>" placeholder="Company Name">
        
        <div>
          <img src="<%- company.logo %>" />
        </div>
    </div>

    <input class="location" type="text" name="location" value="<%- company.location %>" placeholder="Company Location">
    
    <div class="companyProduct">
        <label>Product:</label>
        <textarea type="text" name="product" value="<%- company.product %>" placeholder="Company Product" rows="2"></textarea>
    </div>
    
    <div class="numbers">
        <label>Employees:</label>
        <label>Founded:</label>
        <input type="text" name="size" value="<%- company.size %>" placeholder="Company Size">
        <input type="text" name="founded" value="<%- company.founded %>" placeholder="Founding Year">
    </div>

    <div class="mission">
        <label>Mission:</label>
        <textarea type="text" name="mission" value="<%= company.mission %>" placeholder="Company Mission" rows="6"></textarea>
    </div>
    
    <div class="leaders">    
        <label>Leadership:</label>
        <label>Clients:</label>
        
        <input type="text" name="leaders" value="<%- company.leaders %>" placeholder="Company Leaders">
        <input type="text" name="clients" value="<%- company.clients %>" placeholder="Company Clients">
    </div>

    <label>Website:</label>
    <input type="text" name="domain" value="<%- company.domain %>" placeholder="Company Website">
    
    <label>Contacts:</label>
    <input type="text" name="contacts" value="<%- company.contacts %>" placeholder="Possible Company Contacts">
    
    <button type="button">-</button>    
    
    <label>Notes:</label>
    <textarea class="userNotes" name="notes" value="<%- company.notes %>" placeholder="Enter personal notes on company here." cols="30" rows="10"><%- company.notes %></textarea>
    <label>Submit:</label>
    <button type="submit"><%- 'update' === formAction ? "Update This Company" : "Add This Company" %></button>
</form>